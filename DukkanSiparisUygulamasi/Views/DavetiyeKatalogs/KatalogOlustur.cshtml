@model Entity.DavetiyeKatalog

@{
    ViewBag.Title = "Katalog Oluştur";
}

<h2>Katalog Oluştur</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Davetiye Katalog</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.KatalogAdi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.KatalogAdi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KatalogAdi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Katalog Oluştur" class="btn btn-success" />
                
            </div>
        </div>
    </div>
}<br />
 <br />

    <div>
        @Html.ActionLink("Katalog Listesine Dön", "Index")
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
